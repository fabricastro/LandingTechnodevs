<svg 
  width="60" 
  height="60" 
  viewBox="0 0 60 60" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
  class="w-[60px] h-[60px]"
>
  <!-- Monitor/Screen background -->
  <rect 
    x="8" 
    y="12" 
    width="44" 
    height="32" 
    rx="4" 
    ry="4" 
    fill="url(#gradient2)" 
    fill-opacity="0.1" 
    stroke="url(#gradient2)" 
    stroke-width="2"
  />
  
  <!-- Screen content area -->
  <rect 
    x="12" 
    y="16" 
    width="36" 
    height="24" 
    rx="2" 
    ry="2" 
    fill="url(#gradient2)" 
    fill-opacity="0.05"
  />
  
  <!-- Code lines -->
  <g stroke="url(#gradient2)" stroke-width="1.5" fill="none">
    <!-- First line of code -->
    <line x1="16" y1="20" x2="28" y2="20" opacity="0.8" />
    <line x1="30" y1="20" x2="44" y2="20" opacity="0.6" />
    
    <!-- Second line of code -->
    <line x1="18" y1="24" x2="26" y2="24" opacity="0.8" />
    <line x1="28" y1="24" x2="42" y2="24" opacity="0.6" />
    
    <!-- Third line of code -->
    <line x1="16" y1="28" x2="22" y2="28" opacity="0.8" />
    <line x1="24" y1="28" x2="38" y2="28" opacity="0.6" />
    
    <!-- Fourth line of code -->
    <line x1="20" y1="32" x2="32" y2="32" opacity="0.8" />
    <line x1="34" y1="32" x2="40" y2="32" opacity="0.6" />
    
    <!-- Fifth line of code -->
    <line x1="16" y1="36" x2="24" y2="36" opacity="0.8" />
    <line x1="26" y1="36" x2="44" y2="36" opacity="0.6" />
  </g>
  
  <!-- Stand/Base -->
  <rect 
    x="26" 
    y="44" 
    width="8" 
    height="6" 
    rx="1" 
    ry="1" 
    fill="url(#gradient2)" 
    fill-opacity="0.3"
  />
  
  <!-- Base plate -->
  <rect 
    x="20" 
    y="50" 
    width="20" 
    height="2" 
    rx="1" 
    ry="1" 
    fill="url(#gradient2)" 
    fill-opacity="0.4"
  />
  
  <!-- Customization indicators - geometric shapes -->
  <g fill="url(#gradient2)" fill-opacity="0.6">
    <!-- Top left custom element -->
    <circle cx="15" cy="8" r="2" />
    
    <!-- Top right custom element -->
    <polygon points="45,6 48,9 45,12 42,9" />
    
    <!-- Bottom left custom element -->
    <rect x="12" y="46" width="4" height="4" rx="1" transform="rotate(45 14 48)" />
    
    <!-- Bottom right custom element -->
    <polygon points="48,48 50,46 52,48 50,50" />
  </g>
  
  <!-- Cursor/pointer indicating interaction -->
  <g fill="url(#gradient2)" fill-opacity="0.8">
    <polygon points="54,14 56,16 54,20 52,18 50,20 48,18 50,16 52,14" />
  </g>
  
  <!-- Connection lines showing customization -->
  <g stroke="url(#gradient2)" stroke-width="1" opacity="0.4" fill="none">
    <line x1="15" y1="10" x2="20" y2="12" stroke-dasharray="2,2" />
    <line x1="45" y1="10" x2="40" y2="12" stroke-dasharray="2,2" />
    <line x1="14" y1="46" x2="18" y2="44" stroke-dasharray="2,2" />
    <line x1="50" y1="46" x2="46" y2="44" stroke-dasharray="2,2" />
  </g>
  
  <defs>
    <linearGradient id="gradient2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#818cf8;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#c7d2fe;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#bcee22;stop-opacity:1" />
    </linearGradient>
  </defs>
</svg> 