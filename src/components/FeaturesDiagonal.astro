---
const { stories } = Astro.props;
---

<section class="lg:mb-16 w-full flex flex-col justify-center items-center bg-bgDark1">
  <!-- Título de la sección -->
  <div class="fade-in-animation 2xl:w-[1150px] xl:w-[1050px] md:w-4/5 flex justify-center bg-bgDark1 pt-8 lg:pt-14 mx-auto lg:flex-row flex-col">
    <div class="w-3/4 lg:w-1/2 flex flex-col lg:mx-unset mx-auto">
      <span class="block-subtitle text-center">El trabajo que nos respalda</span>
      <h2 class="mt-10 mb-8 text-4xl lg:text-5xl block-big-title text-center">
        Proyectos
      </h2>
    </div>
  </div>

  <!-- Galería de Proyectos -->
  <div
    id="project-gallery"
    class="w-full max-w-screen-lg mx-auto my-12 grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 px-4"
  >
    {stories.map((project) => (
      <div
        class="bg-bgDark2 border border-gray-600 rounded-lg overflow-hidden shadow-lg project-card"
        data-category={project.content.category}
      >
        <a href={project.content.link} target="_blank">
          <img
            src={project.content.image}
            alt={project.content.title}
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold text-white mb-2">
              {project.content.title}
            </h3>
            <p class="text-secondaryText">{project.content.description}</p>
          </div>
        </a>
      </div>
    ))}
  </div>
</section>
