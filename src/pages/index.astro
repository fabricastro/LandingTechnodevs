---
import Layout from '../layouts/Layout.astro'
import { Hero } from '../components/Hero.jsx'
import { Navbar } from '../components/Navbar.jsx'
import Features1  from '../components/Features1.astro'
import { Features2 } from '../components/Features2.jsx'
import { Testimonials } from '../components/Testimonials.jsx'
import FeaturesDiagonal from '../components/FeaturesDiagonal.astro'
import { Pricing } from '../components/Pricing.jsx'
import { FAQ } from '../components/FAQ.jsx'
import { Brands } from '../components/Brands.jsx'
import { Blog } from '../components/Blog'
import { Footer } from '../components/Footer.jsx'
import { ScrollUpButton } from '../components/ScrollUpButton'
import  Splash  from '../components/splash.astro'
import '../styles/Theme.css'
import '../styles/Diagonals.css'
import { useStoryblokApi } from '@storyblok/astro'

import StoryGrid from '../components/StoryGrid.astro'

const storyblokApi = useStoryblokApi()
const { data } = await storyblokApi.get('cdn/stories', {
  version: 'draft',
  starts_with: 'project', // Puedes cambiarlo seg√∫n la ruta donde guardes tus stories
})

const stories = data.stories
---

<Layout title="Desarrollo Web, Software a Medida y Redes Sociales">
  <Navbar client:load />
  <Splash />
  <Features1 />
  <StoryGrid stories={stories} />
  <div>{stories.feature}</div>
  <FeaturesDiagonal />
  <Pricing client:load />
  <Brands client:load />
  <Testimonials client:load />
  <Blog client:load />
  <FAQ client:load /> 
  <Footer />
  <ScrollUpButton client:load />
</Layout>
